{
	"name": "@thetinkerinc/colibri",
	"license": "MIT",
	"version": "0.4.2",
	"description": "Customizable svelte component library",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/thetinkerinc/colibri.git"
	},
	"homepage": "https://colibri-thetinkerinc.vercel.app/",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"lint": "prettier --check **/*.{js,cjs,css,json,svelte} && eslint .",
		"format": "prettier --write **/*.{js,cjs,css,json,svelte}"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./styles/*": "./src/lib/styles/*",
		"./themes/*": "./src/lib/themes/*"
	},
	"files": [
		"dist",
		"./src/lib/themes/*",
		"./src/lib/styles/*"
	],
	"dependencies": {
		"buffer": "^6.0.3",
		"dayjs": "^1.11.9",
		"lucide-svelte": "^0.279.0",
		"prismjs": "^1.29.0",
		"svelte": "^4.2.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^3.0.3",
		"@sveltejs/kit": "^1.25.0",
		"@sveltejs/package": "^2.2.2",
		"@vercel/analytics": "^1.0.2",
		"autoprefixer": "^10.4.15",
		"color2k": "^2.0.2",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.33.1",
		"esm-env": "^1.0.0",
		"js-cookie": "^3.0.5",
		"masonry-layout": "^4.2.2",
		"postcss": "^8.4.29",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"prism-svelte": "^0.5.0",
		"publint": "^0.2.2",
		"svelte-preprocess": "^5.0.4",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.9"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts"
}
